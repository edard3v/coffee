---
import type { HTMLAttributes } from "astro/types";
import logo from "./logo.png";
import Image from "astro/components/Image.astro";

interface Props extends HTMLAttributes<"picture"> {}

const { class: cls, ...rest } = Astro.props;
---

<picture {...rest} class:list={["logo", cls]}>
  <Image src={logo} alt="logo" width={400} height={272} format="avif" />
</picture>

<style>
  .logo {
    max-width: 120px;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
